<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300">
    <StackPanel Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="名前"  Margin="5" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Margin="2" Grid.Column="1"/>

            <TextBlock Text="電話番号" Margin="5" Grid.Row="1" VerticalAlignment="Center" />
            <TextBox x:Name="PhoneTextBox" Margin="2" Grid.Column="1" Grid.Row="1"/>

            <TextBlock Text="住所" Margin="5" Grid.Row="2" VerticalAlignment="Center" />
            <TextBox x:Name="AddressTextBox" Margin="2" Grid.Column="1" Grid.Row="2"/>
        </Grid>
        <Button Content="Save" x:Name="SaveButton"  Margin="2" Click="SaveButton_Click"/>
        <Button Content="Delete" x:Name="DeleteButton"  Margin="2" Click="DeleteButton_Click"/>
        <!--<Button Content="Read" x:Name="ReadButton"  Margin="2" Click="ReadButton_Click"/>-->

        <TextBox x:Name="SearchTextBox" FontSize="20" Margin="2" TextChanged="SearchTextBox_TextChanged"/>

        <ListView x:Name="CustomerListView" Margin="2,5,2,0" Height="280">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Id}"/>
                        <TextBlock Text="{Binding Name}" FontSize="20"/>
                        <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                        <TextBlock Text="{Binding Address}" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
