<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="名前"  Margin="5" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox" Margin="5" Grid.Column="1"/>

                <TextBlock Text="電話番号" Margin="5" Grid.Row="1" VerticalAlignment="Center" />
                <TextBox x:Name="PhoneTextBox" Margin="5" Grid.Column="1" Grid.Row="1"/>
            </Grid>
            <Button Content="Save" x:Name="SaveButton"  Margin="5" Click="SaveButton_Click"/>
            <Button Content="Read" x:Name="ReadButton"  Margin="5" Click="ReadButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
